<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sahte.calculator.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:textSize="50dp"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sayi_1"
        android:background="@drawable/s"
        android:layout_above="@+id/sayi_4"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sayi_2"
        android:background="@drawable/s2"
        android:layout_alignTop="@+id/sayi_1"
        android:layout_toRightOf="@+id/sayi_1"
        android:layout_toEndOf="@+id/sayi_1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sayi_3"
        android:background="@drawable/s3"
        android:layout_above="@+id/sayi_6"
        android:layout_toRightOf="@+id/sayi_2"
        android:layout_toEndOf="@+id/sayi_2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/sayi_topla"
        android:background="@drawable/topla"
        android:layout_alignTop="@+id/sayi_3"
        android:layout_toRightOf="@+id/sayi_3"
        android:layout_toEndOf="@+id/sayi_3"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sayi_4"
        android:background="@drawable/s4"
        android:layout_above="@+id/sayi_7"
        android:layout_alignLeft="@+id/sayi_1"
        android:layout_alignStart="@+id/sayi_1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sayi_5"
        android:background="@drawable/s5"
        android:layout_above="@+id/sayi_7"
        android:layout_toRightOf="@+id/sayi_4"
        android:layout_toEndOf="@+id/sayi_4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sayi_6"
        android:background="@drawable/s6"
        android:layout_above="@+id/sayi_9"
        android:layout_alignLeft="@+id/sayi_3"
        android:layout_alignStart="@+id/sayi_3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/sayi_cikar"
        android:background="@drawable/cikar"
        android:layout_above="@+id/sayi_carp"
        android:layout_toRightOf="@+id/sayi_6"
        android:layout_toEndOf="@+id/sayi_6"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sayi_7"
        android:background="@drawable/s7"
        android:layout_above="@+id/sayi_0"
        android:layout_alignLeft="@+id/sayi_4"
        android:layout_alignStart="@+id/sayi_4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sayi_8"
        android:background="@drawable/s8"
        android:layout_above="@+id/sayi_0"
        android:layout_toLeftOf="@+id/sayi_6"
        android:layout_toStartOf="@+id/sayi_6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sayi_9"
        android:background="@drawable/s9"
        android:layout_above="@+id/sayi_bol"
        android:layout_alignLeft="@+id/sayi_6"
        android:layout_alignStart="@+id/sayi_6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/sayi_carp"
        android:background="@drawable/carp"
        android:focusableInTouchMode="true"
        android:layout_alignTop="@+id/sayi_9"
        android:layout_toRightOf="@+id/sayi_9"
        android:layout_toEndOf="@+id/sayi_9"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sayi_0"
        android:background="@drawable/s0"
        android:layout_alignTop="@+id/sayi_sil"
        android:layout_toEndOf="@+id/sayi_sil" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/sayi_bol"
        android:background="@drawable/bol"
        android:layout_alignTop="@+id/sayi_hesapla"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/sayi_hesapla" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/est"
        android:id="@+id/sayi_hesapla"
        android:layout_alignTop="@+id/sayi_0"
        android:layout_toLeftOf="@+id/sayi_carp"
        android:layout_toStartOf="@+id/sayi_carp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sayi_sil"
        android:background="@drawable/ccc"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/sayi_7"
        android:layout_alignStart="@+id/sayi_7"
        android:layout_marginBottom="71dp" />

</RelativeLayout>
